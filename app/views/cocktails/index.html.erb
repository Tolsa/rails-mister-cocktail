
<div class="container">
  <h1>HELLO DRINKERS</h1>
  <div class="row">
    <% @cocktails.each do |c|  %>
      <div class="col-sm-4">
        <div class="card-cocktail">
          <h3><%= link_to c.name, cocktail_path(c.id) %></h3>
            <% c.doses.each do |dose| %>
            <p> - <%= dose.ingredient.name %></p>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

