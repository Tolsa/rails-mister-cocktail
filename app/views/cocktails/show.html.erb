<div class="container">
  <div class="top-bar">
    <h1><%= @cocktail.name %></h1>
    <%= link_to "Edit this cocktail", edit_cocktail_path(@cocktail) %>
  </div>
  <div class="show-wrapper">


    <div class="row2" style="background-image: url('<%= cl_image_path @cocktail.photo, height: 350, width: 450, crop: :fill %>')">
      <div class="card-ingredients">
        <% @cocktail.doses.each do |dose|  %>
          <div class="col-sm-12">
            <div class="ingredient-card">
            <%= dose.ingredient.name %> : <%= dose.description %>
            <%= link_to "Delete ingredient", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
      <div class="form-wrapper">
       <%= render 'doses/form' %>
      </div>
  </div>
</div>

